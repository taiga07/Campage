<div class="container">
  <div class="row">
    <h2>
      お問い合わせフォーム
    </h2>
    <!--urlを確認画面のurlにすることで、データを確認画面に送っている。-->
    <%= form_with model: @contact, url: confirm_contacts_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :お名前 %>
        <%= f.text_field :name, autofoucus: true %>
      </div>
      <div class="form-group">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofoucus: true %>
      </div>
      <div class="form-group">
        <%= f.label :電話番号（ハイフンなし） %>
        <%= f.text_field :phone_number, autofoucus: true %>
      </div>
      <div class="form-group">
        <%= f.label :お問い合わせ内容 %>
        <%= f.text_area :body, size: '10x10', autofoucus: true %>
      </div>
      <div>
        <%= f.submit "入力内容確認" %>
      </div>
    <% end %>
  </div>
</div>