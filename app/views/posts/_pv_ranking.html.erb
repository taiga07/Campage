<% posts_pv_ranking.each do |post| %>
  <div class="col-lg-3 d-flex flex-column postranking">
    <div class="ranking-user-name">
      <%= link_to user_path(post.user.id) do %>
        <%= attachment_image_tag post.user, :profile_image, size: '50x50', fallback: "no_image.jpg" %>
        <%= post.user.name %>
      <% end %>
    </div>
    <div>
      <%= post.title %>
    </div>

    <div class="mb-auto ranking-post">
      <% post.post_images.first(1).each do |image| %>
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag image, :image %>
        <% end %>
      <% end %>
  　</div>
  　<div>
  　  <i class="far fa-eye"></i>
  　  <%= post.impressions_count %>
　   <i class="far fa-clock clock-icon"></i>
     <%= time_ago_in_words(post.created_at) %>前
  　</div>
  </div>
<% end %>