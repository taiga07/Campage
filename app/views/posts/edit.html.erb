<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-lg-6 postedit">
      <div class="slick">
        <% @post.post_images.each do |image| %>
          <%= attachment_image_tag image, :image %>
        <% end %>
      </div>
      <div class="d-flex justify-content-center">
        <%= form_with model:@post, local: true do |f| %>
          <div class="title-form"><%= f.text_field :title %></div>
          <div class="body-form"><%= f.text_area :body %></div>
          <div class="d-flex justify-content-center"><%= f.submit "変更を保存" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>