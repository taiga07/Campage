<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= attachment_image_tag current_user, :profile_image, size: '50x50', fallback: "no_image.jpg" %>
      <%= @post.name %>
    </div>
    <div class="col-lg-9">
      <table>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.user.name %></td>
          </tr>
          <tr>
            <td><%= post.title %></td>
          </tr>
            <tr class="slick">
              <td class="slick">
                  <% post.post_images.each do |image| %>
                  <%= link_to post_path(image.post.id) do %>
                    <%= attachment_image_tag image, :image, size: '150x150' %>
                  <% end %>
                  <% end %>
              </td>
            </tr>
          <tr>
            <td><%= post.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

