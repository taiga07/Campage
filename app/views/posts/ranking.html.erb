<h2>グッド!!が多い投稿</h2>
<div>
  <% @posts_like_ranking.each do |post| %>
    <div>
      <%= link_to user_path(post.user.id) do %>
        <%= attachment_image_tag post.user, :profile_image, size: '50x50', fallback: "no_image.jpg" %>
        <%= post.user.name %>
      <% end %>
      <div>
        <%= post.title %>
      </div>
    </div>
    <div class="mypage">
      <% post.post_images.first(1).each do |image| %>
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag image, :image %>
        <% end %>
      <% end %>
  　</div>
  　<div>
  　  <%= post.likes.count %>
  　</div>
  <% end %>
  <div>
    <%= link_to "一覧で見る", posts_good_ranking_path %>
  </div>
</div>

