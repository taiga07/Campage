<div class="container">
  <div class="row">
    <div class= "col-lg-12">
      <% posts.each do |post| %>
        <div>
          <%= link_to user_path(post.user) do %>
            <%= attachment_image_tag post.user, :profile_image, size: '50x50', fallback: "no_image.jpg" %>
            <%= post.user.name %>
          <% end %>
        </div>
        <div class="search-image">
          <% post.post_images.first(1).each do |image| %>
          <%= link_to post_path(post.id) do %>
            <%= attachment_image_tag image, :image %>
          <% end %>
        <% end %>
        </div>
        <div>
          <%= render "likes/like", post: post %>
        </div>
      <% end %>
    </div>
  </div>
</div>