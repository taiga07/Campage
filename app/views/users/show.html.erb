<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <div>
        <%= attachment_image_tag @user, :profile_image, size: '50x50', fallback: "no_image.jpg" %>
        <%= @user.name %>
      </div>
      <div>
        <%= @user.introduction %>
      </div>
      <% if current_user != @user %>
        <div class="relationship_count">
          <%= render "relationships/count",user: @user, following_users: @following_users, follower_users: @follower_users %>
        </div>
        <div class="relationship">
          <%= render "relationships/button", user: @user %>
        </div>
        <div>
          <%= render "message_button", user: @user, isroom: @isroom, room: @room, entry: @entry, roomid: @roomid %>
        </div>
      <% else %>
        <div class="relationship_count">
          <%= render "relationships/count",user: @user, following_users: @following_users, follower_users: @follower_users %>
        </div>
        <div>
          <%= link_to "edit", edit_user_path(current_user.id) %>
        </div>
        <div>
          <%= link_to "Logout", destroy_user_session_path, method: :delete %>
        </div>
      <% end %>
    </div>
    <div class="col-lg-9">
      <div class="mypage">
        <% @posts.each do |post| %>
          <% post.post_images.first(1).each do |image| %>
            <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag image, :image %>
            <% end %>
          <% end %>
        <% end %>
    ã€€</div>
    </div>
  </div>
</div>

