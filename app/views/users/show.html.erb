<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <div>
        <%= attachment_image_tag @user, :profile_image, size: '50x50', fallback: "no_image.jpg" %>
        <%= @user.name %>
      </div>
      <% if current_user != @user %>
        <div class="relationship_count">
          <%= render "relationships/count",user: @user, following_users: @following_users, follower_users: @follower_users %>
        </div>
        <div class="relationship">
          <%= render "relationships/button", user: @user %>
        </div>
        <div>
          <% unless @user.id == current_user.id %>    <!--現在ログインしているユーザーではない場合-->
            <% if @isroom == true %>    <!--既にルームが作成されていれば-->
              <%= link_to "ダイレクトメッセージ", room_path %>    <!--そのチャットルームに遷移するボタンを表示-->
            <% else %>  <!--ルームがなければ-->
              <%= form_with model: @room, local: true do |f| %>    <!--roomsテーブルに情報を送信-->
                <%= fields_for @entry do |r| %>    <!--entriesテーブルに情報を送信-->
                  <%= r.hidden_field :user_id, value: @user.id %>  <!--entriesテーブルにuser_idを含める-->
                <% end %>
                <%= f.submit "チャットを始める" %>
              <% end %>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="relationship_count">
          <%= render "relationships/count",user: @user, following_users: @following_users, follower_users: @follower_users %>
        </div>
        <div>
          <%= link_to "edit", edit_user_path(current_user.id) %>
        </div>
        <div>
          <%= link_to "Logout", destroy_user_session_path, method: :delete %>
        </div>
      <% end %>
    </div>
    <div class="col-lg-9">
      <div class="mypage">
        <% @posts.each do |post| %>
          <% post.post_images.first(1).each do |image| %>
            <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag image, :image %>
            <% end %>
          <% end %>
        <% end %>
    　</div>
    </div>
  </div>
</div>

